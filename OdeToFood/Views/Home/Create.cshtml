@using OdeToFood.Models
@model Restaurant

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <h1>Create</h1>
    <form method="post">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>

        <div>
            <label asp-for="Couisine"></label>
            <select asp-for="Couisine" asp-items="@Html.GetEnumSelectList<CouisineType>()"></select>
            <span asp-validation-for="Couisine"></span>
        </div>
        <input type="submit" name="save" value="Save" />

    </form>
    <div asp-validation-summary="All"></div>
    <a asp-action="Index" asp-controller="Home">Go to Home</a>
</body>
</html>
